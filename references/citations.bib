@article{saleStockRecruitRelationshipsRegional1982,
  title = {Stock-{{Recruit Relationships}} and {{Regional Coexistence}} in a {{Lottery Competitive System}}: {{A Simulation Study}}},
  shorttitle = {Stock-{{Recruit Relationships}} and {{Regional Coexistence}} in a {{Lottery Competitive System}}},
  author = {Sale, Peter F.},
