@article{colemanShiftingReefFish2018,
  title = {Shifting reef fish assemblages along a depth gradient in {{Pohnpei}}, {{Micronesia}}},
  author = {Coleman, Richard R. and Copus, Joshua M. and Coffey, Daniel M. and Whitton, Robert K. and Bowen, Brian W.},
