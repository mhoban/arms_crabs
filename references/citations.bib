@article{desouzaImportanceDepthTemperature2023,
  title = {Importance of depth and temperature variability as drivers of coral symbiont composition despite a mass bleaching event},
  author = {{de Souza}, Mariana Rocha and Caruso, Carlo and {Ruiz-Jones}, Lupita and Drury, Crawford and Gates, Ruth D. and Toonen, Robert J.},
